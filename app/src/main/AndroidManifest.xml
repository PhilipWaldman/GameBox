<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gamebox">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GameBox">
        <activity android:name=".ui.tools.encryption.SubstitutionCipherActivity"></activity>
        <activity android:name=".ui.tools.EncryptionActivity" />
        <activity android:name=".ui.games.FaceClickerActivity" />
        <activity
            android:name=".ui.demos.PiEstimationActivity"
            android:label="@string/pi_estimators_demo"
            android:theme="@style/Theme.GameBox.NoActionBar" />
        <activity
            android:name=".ui.games.SimonActivity"
            android:label="@string/simon_game" />
        <activity
            android:name=".ui.tools.MorseCodeActivity"
            android:label="@string/morse_code_tool" />
        <activity
            android:name=".ui.games.TicTacToeActivity"
            android:label="@string/tic_tac_toe_game" />
        <activity
            android:name=".ui.demos.FallDetectAlgoActivity"
            android:label="@string/fall_detection_demo" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.GameBox.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>